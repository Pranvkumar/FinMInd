# FinMind Server Environment Variables (TEMPLATE)
# Copy this to .env and fill in your values.

# ── Database (MongoDB Atlas) ──
# Get your free cluster at https://cloud.mongodb.com
DATABASE_URL="mongodb+srv://<username>:<password>@<cluster>.mongodb.net/finmind?retryWrites=true&w=majority"

# ── Auth Secrets ──
JWT_SECRET="replace-with-a-strong-random-string"
JWT_REFRESH_SECRET="replace-with-another-strong-random-string"

# ── Token Expiry ──
ACCESS_TOKEN_EXPIRY="15m"
REFRESH_TOKEN_EXPIRY="7d"

# ── AI (Groq) ──
GROQ_API_KEY="your-groq-api-key-here"

# ── Client URL (for CORS in production) ──
CLIENT_URL="https://your-client.onrender.com"

# ── Server ──
PORT=5000
